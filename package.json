{
  "private": true,
  "scripts": {
    "dev": "yarn run dev:website & yarn run dev:functions",
    "dev:website": "cd website && yarn run serve",
    "dev:functions": "netlify-lambda serve functions --config ./webpack.dev.config.js",
    "start": "yarn run dev",
    "lint": "eslint --ext .js,.vue website/src",
    "build": "yarn run build:website && yarn run build:functions",
    "build:website": "cd website && yarn run build",
    "build:functions": "netlify-lambda build functions"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-vue": "^8.4.0",
    "netlify-lambda": "^2.0.15"
  },
  "workspaces": [
    "website",
    "gbfs-validator",
    "check-systems",
    "functions"
  ]
}
